
<%= link_to "Add a New Category", new_category_path,
            class: "btn btn-primary btn-lg btn-block btn-create"%>

<table class = "table table-striped table-bordered">
  <thead>
    <th>ID</th>
    <th>Name</th>
    <th>Show</th>
    <th>Edit</th>
    <th>Delete</th>
  </thead>
  <tbody>
    <% @categories.each do |category|%>
      <tr>
        <td><%=category.id%></td>
        <td><%=category.name%></td>
        <td><%=link_to "show", category_path(category)%></td>
        <td><%=link_to "edit", edit_category_path(category)%></td>
        <td><%=link_to "delete", category_path(category),
                        confirm: "Are you sure?", method: :delete %></td>

      </tr>
    <% end %>
  </tbody>
</table>